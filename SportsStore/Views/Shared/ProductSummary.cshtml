@model Product

<div class="card border-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float: right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.Id" asp-action="Create" asp-controller="Request" method="post">
        <input type="hidden" asp-for="Id" name="productId"/>
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm" style="float: right">Get more info...</button>
        </span>
    </form>
</div>
